<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wonta Rural Development Association</title>

  <link rel="stylesheet" href="/style.css">

  <style>
    /* ===== Floating Animation ===== */
    @keyframes float {
      0%   { transform: translateY(0px); }
      50%  { transform: translateY(-25px); }
      100% { transform: translateY(0px); }
    }

    .floating {
      animation: float 6s ease-in-out infinite;
    }

    /* ===== SLIDER LAYOUT ===== */
    #slider-section {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 40px;
      max-width: 1200px;
      margin: 40px auto;
      padding: 20px;
    }

    /* ===== Half Circle Image ===== */
    #slider-image {
      width: 420px;
      height: 420px;
      object-fit: cover;
      border-radius: 420px 420px 0 0;    /* Makes half-circle */
      clip-path: ellipse(100% 50% at 50% 100%); /* Perfect half-circle */
      box-shadow: 0 12px 30px rgba(0,0,0,0.25);
    }

    /* ===== Text Section ===== */
    #slider-text-box {
      max-width: 450px;
      text-align: left;
    }

    #slider-title {
      font-size: 1.8em;
      font-weight: bold;
      margin-bottom: 12px;
    }

    #slider-desc {
      font-size: 1.1em;
      line-height: 1.6;
      margin-bottom: 20px;
    }

    #next-btn {
      padding: 12px 24px;
      background: #007b00;
      color: #fff;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1.1em;
      font-weight: bold;
    }

    #next-btn:hover {
      background: #009900;
    }
  </style>
</head>

<body class="home-page">

  <!-- Header -->
  <%- include('partials/header') %>

  <!-- ========================================================== -->
  <!-- HALF-CIRCLE FLOATING IMAGE + RIGHT SIDE TEXT SLIDER       -->
  <!-- ========================================================== -->
  <section id="slider-section">

    <!-- Half circle floating image -->
    <img id="slider-image" class="floating" src="/images/nebir.jpg">

    <!-- Title + Text -->
    <div id="slider-text-box">
      <h2 id="slider-title">Nebir Project</h2>
      <p id="slider-desc">
        Supporting rural development through sustainable programs.
      </p>

      <button id="next-btn">Next →</button>
    </div>

  </section>

  <!-- SLIDER SCRIPT -->
  <script>
    const slides = [
      {
        img: "/images/nebir.jpg",
        title: "Nebir Project",
        text: "Supporting rural development through sustainable programs."
      },
      {
        img: "/images/tota.jpg",
        title: "Tota Community Work",
        text: "Empowering local families with tools, knowledge, and training."
      },
      {
        img: "/images/project1.jpg",
        title: "Agricultural Support Initiative",
        text: "Helping farmers increase food production and income through modern techniques."
      }
    ];

    let index = 0;

    document.getElementById("next-btn").addEventListener("click", () => {
      index = (index + 1) % slides.length;
      updateSlider();
    });

    function updateSlider() {
      document.getElementById("slider-image").src = slides[index].img;
      document.getElementById("slider-title").innerText = slides[index].title;
      document.getElementById("slider-desc").innerText = slides[index].text;
    }
  </script>

  <!-- ========================================================== -->
  <!-- MAIN CONTENT                                               -->
  <!-- ========================================================== -->
  <main class="main-content" style="max-width: 1200px; margin: auto; text-align: center; padding: 50px 20px;">

    <section>
      <h2 style="margin-bottom: 30px;">Empowering Rural Communities, Transforming Lives</h2>

      <p style="line-height: 1.8; font-size: 1.1em; margin-bottom: 20px;">
        Welcome to <strong>Wonta Rural Development Association</strong>. Every rural community deserves
        access to education, healthcare, and sustainable livelihoods.
      </p>

      <p style="line-height: 1.8; font-size: 1.1em; margin-bottom: 40px;">
        Since our founding, we have been dedicated to creating impactful programs that make a tangible
        difference — focusing on education, healthcare, women & youth empowerment, and sustainable agriculture.
      </p>
    </section>

    <!-- ========================================================== -->
    <!-- LATEST NEWS                                                -->
    <!-- ========================================================== -->
    <section style="margin-top: 60px;">
      <h2 style="margin-bottom: 20px;">Latest News</h2>

      <div class="news-grid"
        style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
               gap: 20px; margin-top: 30px;">

        <% recentNews.forEach(news => { %>
          <div class="news-card" style="
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            text-align: left;
          ">
            <img src="<%= news.image %>" alt="<%= news.title %>"
              style="width: 100%; height: 180px; object-fit: cover;">

            <div style="padding: 15px;">
              <h3 style="font-size: 1.1em; margin-bottom: 10px;"><%= news.title %></h3>
              <p style="font-size: 0.9em; color: #555;"><%= news.summary %></p>

              <p style="font-size: 0.85em; color: #777; margin: 10px 0;">
                <strong>Date:</strong> <%= news.date %>
              </p>

              <a href="/news" style="display: inline-block; margin-top: 10px; font-weight: bold; color: #0066cc;">
                Read More →
              </a>
            </div>
          </div>
        <% }) %>
      </div>

      <div style="margin-top: 20px;">
        <a href="/news" style="font-size: 1.1em; font-weight: bold; color: #008000;">
          View All News →
        </a>
      </div>
    </section>

  </main>

  <!-- Footer -->
  <%- include('partials/footer') %>

</body>
</html>
