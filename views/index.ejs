<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wonta Rural Development Association</title>

  <link rel="stylesheet" href="/style.css">

  <style>

    /* Floating animation */
    @keyframes float {
      0% { transform: translateY(0); }
      50% { transform: translateY(-35px); }
      100% { transform: translateY(0); }
    }
    .floating {
      animation: float 6s ease-in-out infinite;
    }

    /* MAIN SLIDER LAYOUT */
    #slider-section {
      display: flex;
      align-items: center;
      height: 100vh;
      width: 100%;
      overflow: hidden;
      padding: 0;
      margin: 0;
    }

    /* LEFT SIDE = FULL IMAGE */
    #image-container {
      flex: 1; /* full left half */
      height: 100%;
      width: 100%;
      overflow: hidden;
    }

    #slider-image {
      width: 100%;
      height: 100%;
      object-fit: cover; /* completely fills left side */
      border-radius: 0;  /* remove curve to fully fill */
    }

    /* RIGHT SIDE CIRCLE */
    #slider-text-box {
      width: 450px;
      height: 450px;
      background: white;
      border-radius: 50%;
      padding: 55px;

      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;

      border: 6px solid #007b00;
      box-shadow: 0 18px 45px rgba(0,0,0,0.28);

      position: relative;
      right: 60px;  /* Touch the image */
      z-index: 5;
    }

    #slider-title {
      font-size: 2em;
      font-weight: bold;
      margin-bottom: 15px;
      color: #004d00;
    }

    #slider-desc {
      font-size: 1.15em;
      margin-bottom: 25px;
      line-height: 1.5;
    }

    #next-btn {
      padding: 14px 28px;
      background: #007b00;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1.1em;
      font-weight: bold;
    }

    #next-btn:hover {
      background: #009900;
    }

  </style>
</head>

<body class="home-page">

  <!-- Header -->
  <%- include('partials/header') %>

  <!-- SLIDER SECTION -->
  <section id="slider-section">

    <div id="image-container">
      <img id="slider-image" class="floating" src="/images/nebir.jpg">
    </div>

    <div id="slider-text-box">
      <h2 id="slider-title">Nebir Project</h2>
      <p id="slider-desc">Supporting rural development through sustainable programs.</p>

      <button id="next-btn">Next →</button>
    </div>

  </section>

  <!-- SLIDER SCRIPT -->
  <script>
    const slides = [
      {
        img: "/images/nebir.jpg",
        title: "Nebir Project",
        text: "Supporting rural development through sustainable programs."
      },
      {
        img: "/images/tota.jpg",
        title: "Tota Community Work",
        text: "Empowering local families with tools, knowledge, and training."
      },
      {
        img: "/images/project1.jpg",
        title: "Agricultural Support Initiative",
        text: "Helping farmers increase production using modern techniques."
      }
    ];

    let index = 0;

    document.getElementById("next-btn").addEventListener("click", () => {
      index = (index + 1) % slides.length;
      updateSlider();
    });

    function updateSlider() {
      document.getElementById("slider-image").src = slides[index].img;
      document.getElementById("slider-title").innerText = slides[index].title;
      document.getElementById("slider-desc").innerText = slides[index].text;
    }
  </script>

  <!-- MAIN PAGE CONTENT -->
  <main class="main-content" style="max-width: 1200px; margin: auto; text-align: center; padding: 50px 20px;">

    <section>
      <h2 style="margin-bottom: 30px;">Empowering Rural Communities, Transforming Lives</h2>

      <p style="line-height: 1.8; font-size: 1.1em;">
        Welcome to <strong>Wonta Rural Development Association</strong>, committed to bringing education,
        healthcare, empowerment, and sustainable agriculture to rural communities.
      </p>
    </section>

    <!-- Latest News -->
    <section style="margin-top: 60px;">
      <h2 style="margin-bottom: 20px;">Latest News</h2>

      <div class="news-grid"
        style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
               gap: 20px; margin-top: 30px;">

        <% recentNews.forEach(news => { %>
        <div class="news-card"
            style="background: #fff; border-radius: 8px; overflow: hidden;
                   box-shadow: 0 4px 10px rgba(0,0,0,0.1); text-align: left;">
          <img src="<%= news.image %>" style="width:100%; height:180px; object-fit:cover;">
          <div style="padding: 15px;">
            <h3><%= news.title %></h3>
            <p><%= news.summary %></p>
            <p><strong>Date:</strong> <%= news.date %></p>
            <a href="/news" style="font-weight:bold; color:#0066cc;">Read More →</a>
          </div>
        </div>
        <% }) %>

      </div>

      <div style="margin-top: 20px;">
        <a href="/news" style="font-size: 1.1em; font-weight: bold; color: #008000;">View All News →</a>
      </div>

    </section>

  </main>

  <%- include('partials/footer') %>

</body>
</html>
