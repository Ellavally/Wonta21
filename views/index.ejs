<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wonta Rural Development Association</title>

  <link rel="stylesheet" href="/style.css">

  <style>
    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      overflow-x: hidden;
      box-sizing: border-box;
    }

    @keyframes float {
      0%   { transform: translateY(0px); }
      50%  { transform: translateY(-28px); }
      100% { transform: translateY(0px); }
    }
    .floating { animation: float 6s ease-in-out infinite; }

    #slider-section {
      display: flex;
      align-items: center;
      height: 95vh;
      width: 100%;
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }

    #image-container {
      flex: 1;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      position: relative;
    }

    #slider-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .arrow {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0,0,0,0.35);
      color: white;
      border: none;
      padding: 16px;
      font-size: 26px;
      cursor: pointer;
      border-radius: 50%;
      backdrop-filter: blur(2px);
      transition: 0.3s;
    }
    .arrow:hover { background: rgba(0,0,0,0.6); }

    #prev-btn { left: 18px; }
    #next-btn { right: 18px; }

    #slider-text-box {
      flex: 0 0 350px;
      width: 350px;
      height: 280px;
      background: #e3ffe3;
      border-radius: 50% / 40%;
      padding: 35px;

      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;

      box-shadow: 0 18px 45px rgba(0,0,0,0.22);
    }

    #slider-title {
      font-size: 1.6em;
      font-weight: bold;
      margin-bottom: 10px;
      color: #004d00;
    }

    #slider-desc {
      font-size: 1em;
      line-height: 1.4;
      margin-bottom: 20px;
    }
  </style>
</head>

<body class="home-page">

  <%- include('partials/header') %>

  <!-- ================= SLIDER ================= -->
  <section id="slider-section">

    <div id="image-container">
      <button id="prev-btn" class="arrow">←</button>
      <img id="slider-image" class="floating" src="/images/nebir.jpg">
      <button id="next-btn" class="arrow">→</button>
    </div>

    <div id="slider-text-box">
      <h2 id="slider-title">Nebir Project</h2>
      <p id="slider-desc">Supporting rural development through sustainable programs.</p>
    </div>

  </section>

  <script>
    const slides = [
      { img: "/images/nebir.jpg", title: "Educational projects", text: "Supporting rural development through sustainable programs." },
      { img: "/images/tota.jpg", title: "Agricultural Support Initiative", text: "Helping farmers increase food production and income with modern techniques." },
      { img: "/images/project1.jpg", title: "Women Empowering", text: "Empowering Women with tools, knowledge, and training." },
    ];

    let index = 0;

    function updateSlider() {
      document.getElementById("slider-image").src = slides[index].img;
      document.getElementById("slider-title").innerText = slides[index].title;
      document.getElementById("slider-desc").innerText = slides[index].text;
    }

    document.getElementById("next-btn").addEventListener("click", () => {
      index = (index + 1) % slides.length;
      updateSlider();
    });

    document.getElementById("prev-btn").addEventListener("click", () => {
      index = (index - 1 + slides.length) % slides.length;
      updateSlider();
    });

    setInterval(() => {
      index = (index + 1) % slides.length;
      updateSlider();
    }, 4000);
  </script>

