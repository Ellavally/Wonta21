<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wonta Rural Development Association</title>

  <link rel="stylesheet" href="/style.css">

  <style>

    /* Remove all default margin + prevent horizontal scroll */
    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      overflow-x: hidden;
      box-sizing: border-box;
    }

    /* Floating animation */
    @keyframes float {
      0%   { transform: translateY(0px); }
      50%  { transform: translateY(-28px); }
      100% { transform: translateY(0px); }
    }
    .floating { animation: float 6s ease-in-out infinite; }

    /* === LAYOUT === */
    #slider-section {
      display: flex;
      align-items: center;
      height: 95vh;
      width: 100%;
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }

    /* LEFT IMAGE */
    #image-container {
      flex: 1;                     /* FULL width left side */
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      position: relative;
    }

    #slider-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* ARROW BUTTONS */
    .arrow {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0,0,0,0.35);
      color: white;
      border: none;
      padding: 16px;
      font-size: 26px;
      cursor: pointer;
      border-radius: 50%;
      backdrop-filter: blur(2px);
      transition: 0.3s;
    }
    .arrow:hover { background: rgba(0,0,0,0.6); }

    #prev-btn { left: 18px; }
    #next-btn { right: 18px; }

    /* RIGHT OVAL */
    #slider-text-box {
      flex: 0 0 350px;
      width: 350px;
      height: 280px;
      background: #e3ffe3;
      border-radius: 50% / 40%;
      padding: 35px;

      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;

      box-shadow: 0 18px 45px rgba(0,0,0,0.22);

      margin-left: 0px; /* No gap between image and oval */
    }

    #slider-title {
      font-size: 1.6em;
      font-weight: bold;
      margin-bottom: 10px;
      color: #004d00;
    }

    #slider-desc {
      font-size: 1em;
      line-height: 1.4;
      margin-bottom: 20px;
    }

  </style>
</head>

<body class="home-page">

  <%- include('partials/header') %>

  <!-- ================= SLIDER ================= -->
  <section id="slider-section">

    <!-- IMAGE -->
    <div id="image-container">
      <button id="prev-btn" class="arrow">←</button>

      <img id="slider-image" class="floating" src="/images/nebir.jpg">

      <button id="next-btn" class="arrow">→</button>
    </div>

    <!-- DESCRIPTION OVAL -->
    <div id="slider-text-box">
      <h2 id="slider-title">Nebir Project</h2>
      <p id="slider-desc">Supporting rural development through sustainable programs.</p>
    </div>

  </section>

  <!-- JS AUTOMATIC SLIDER -->
  <script>
    const slides = [
      { img: "/images/nebir.jpg", title: "Educational projects", text: "Supporting rural development through sustainable programs." },
      { img: "/images/tota.jpg", title: "Agricultural Support Initiative", text: "Helping farmers increase food production and income with modern techniques." },
      { img: "/images/project1.jpg", title: "Women Empowering", text: "Empowering females with tools, knowledge, and training." },
    ];

    let index = 0;

    function updateSlider() {
      document.getElementById("slider-image").src = slides[index].img;
      document.getElementById("slider-title").innerText = slides[index].title;
      document.getElementById("slider-desc").innerText = slides[index].text;
    }

    document.getElementById("next-btn").addEventListener("click", () => {
      index = (index + 1) % slides.length;
      updateSlider();
    });

    document.getElementById("prev-btn").addEventListener("click", () => {
      index = (index - 1 + slides.length) % slides.length;
      updateSlider();
    });

    setInterval(() => {
      index = (index + 1) % slides.length;
      updateSlider();
    }, 4000);
  </script>

  <!-- ================= CONTENT ================= -->
  <main class="main-content" style="width:100%; max-width:none; margin:0; padding:50px 20px; text-align:center;">

    <section>
      <h2 style="margin-bottom: 30px;">Empowering Rural Communities, Transforming Lives</h2>

      <p style="line-height: 1.8; font-size: 1.1em; margin-bottom: 20px;">
        Welcome to <strong>Wonta Rural Development Association</strong>.
      </p>

      <p style="line-height: 1.8; font-size: 1.1em; margin-bottom: 40px;">
        Dedicated to education, healthcare, empowerment, and sustainable agriculture.
      </p>
    </section>

    <!-- NEWS SECTION -->
    <section style="margin-top: 60px;">
      <h2 style="margin-bottom: 20px;">Latest News</h2>

      <div class="news-grid"
        style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px; margin-top: 30px; width:100%">

        <% recentNews.forEach(news => { %>
          <div class="news-card" style="background:#fff; border-radius:8px; overflow:hidden; box-shadow:0 4px 10px rgba(0,0,0,0.1); text-align:left;">
            <img src="<%= news.image %>" style="width:100%; height:180px; object-fit:cover;">
            <div style="padding:15px;">
              <h3 style="font-size:1.1em; margin-bottom:10px;"><%= news.title %></h3>
              <p style="font-size:0.9em; color:#555;"><%= news.summary %></p>
              <p style="font-size:0.85em; color:#777; margin:10px 0;">
                <strong>Date:</strong> <%= news.date %>
              </p>
              <a href="/news" style="font-weight:bold; color:#0066cc;">Read More →</a>
            </div>
          </div>
        <% }) %>

      </div>

      <div style="margin-top:20px;">
        <a href="/news" style="font-size:1.1em; font-weight:bold; color:#008000;">View All News →</a>
      </div>

    </section>

  </main>

  <%- include('partials/footer') %>

</body>
</html>
