<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wonta Rural Development Association</title>

  <link rel="stylesheet" href="/style.css">

  <style>
    /* ===== Floating Animation ===== */
    @keyframes float {
      0%   { transform: translateY(0px); }
      50%  { transform: translateY(-35px); }
      100% { transform: translateY(0px); }
    }

    .floating {
      animation: float 6s ease-in-out infinite;
    }

    /* ===================================================== */
    /* LARGE IMAGE + CIRCULAR TEXT BOX                       */
    /* ===================================================== */
    #slider-section {
      display: flex;
      align-items: center;
      height: 90vh;
      width: 100%;
      padding: 0 40px;
      gap: 60px;
    }

    /* LEFT IMAGE — 70% */
    #image-container {
      flex: 70%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    #slider-image {
      width: 100%;
      height: 95%;
      max-width: 950px;
      max-height: 950px;
      object-fit: cover;
      border-radius: 20px;
      box-shadow: 0 15px 40px rgba(0,0,0,0.35);
    }

    /* RIGHT CIRCLE TEXT BOX — BEAUTIFIED */
    #slider-text-box {
      flex: 30%;
      background: white;
      width: 350px;
      height: 350px;
      border-radius: 50%;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;

      /* Beauty styling */
      box-shadow: 0 10px 30px rgba(0,0,0,0.25);
      border: 5px solid #007b00;
    }

    #slider-title {
      font-size: 1.8em;
      font-weight: bold;
      margin-bottom: 12px;
      color: #005500;
    }

    #slider-desc {
      font-size: 1.1em;
      line-height: 1.5;
      color: #444;
      margin-bottom: 20px;
    }

    #next-btn {
      padding: 12px 26px;
      background: #007b00;
      color: #fff;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1em;
      font-weight: bold;
    }

    #next-btn:hover {
      background: #009900;
    }
  </style>
</head>

<body class="home-page">

  <!-- Header -->
  <%- include('partials/header') %>

  <!-- ========================================================== -->
  <!--    LARGE IMAGE LEFT + CIRCULAR EXPLANATION RIGHT           -->
  <!-- ========================================================== -->
  <section id="slider-section">

    <div id="image-container">
      <img id="slider-image" class="floating" src="/images/nebir.jpg">
    </div>

    <div id="slider-text-box">
      <h2 id="slider-title">Nebir Project</h2>
      <p id="slider-desc">
        Supporting rural development through sustainable programs.
      </p>
      <button id="next-btn">Next →</button>
    </div>

  </section>

  <!-- SLIDER SCRIPT -->
  <script>
    const slides = [
      {
        img: "/images/nebir.jpg",
        title: "Nebir Project",
        text: "Supporting rural development through sustainable programs."
      },
      {
        img: "/images/tota.jpg",
        title: "Tota Community Work",
        text: "Empowering local families with tools, knowledge, and training."
      },
      {
        img: "/images/project1.jpg",
        title: "Agricultural Support Initiative",
        text: "Helping farmers increase food production and income through modern techniques."
      }
    ];

    let index = 0;

    document.getElementById("next-btn").addEventListener("click", () => {
      index = (index + 1) % slides.length;
      updateSlider();
    });

    function updateSlider() {
      document.getElementById("slider-image").src = slides[index].img;
      document.getElementById("slider-title").innerText = slides[index].title;
      document.getElementById("slider-desc").innerText = slides[index].text;
    }
  </script>
