<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wonta Rural Development Association</title>

  <link rel="stylesheet" href="/style.css">

  <style>
    /* Floating Animation */
    @keyframes float {
      0% { transform: translateY(0px); }
      50% { transform: translateY(-35px); }
      100% { transform: translateY(0px); }
    }

    .floating {
      animation: float 6s ease-in-out infinite;
    }

    /* =============================== */
    /*   MAIN SLIDER LAYOUT           */
    /* =============================== */

    #slider-section {
      display: flex;
      align-items: center;
      height: 95vh;
      width: 100%;
      padding: 0 0;
      gap: 0;
    }

    /* Left Image Fills Screen */
    #image-container {
      flex: 65%;
      height: 100%;
      overflow: hidden;
    }

    #slider-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 0;
    }

    /* =============================== */
    /* TRIMMED OVAL (CUT LEFT PART)   */
    /* =============================== */

    #slider-text-box {
      flex: 35%;
      position: relative;
      left: -70px; /* overlap position */

      width: 520px;
      height: 380px;

      background: white;

      /* OVAL SHAPE */
      border-radius: 50% 50% 50% 50% / 45% 45% 45% 45%;

      padding: 60px;

      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;

      box-shadow: 0 18px 45px rgba(0,0,0,0.25);

      /* CUT THE OVAL PART THAT TOUCHES THE IMAGE */
      clip-path: inset(0 0 0 60px);  /* trims 60px from the left side */
    }

    #slider-title {
      font-size: 2em;
      font-weight: bold;
      margin-bottom: 15px;
      color: #004d00;
    }

    #slider-desc {
      font-size: 1.15em;
      line-height: 1.5;
      margin-bottom: 25px;
    }

    #next-btn {
      padding: 14px 28px;
      background: #007b00;
      color: #fff;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1.1em;
      font-weight: bold;
    }

    #next-btn:hover {
      background: #009900;
    }
  </style>
</head>

<body class="home-page">

  <%- include('partials/header') %>

  <section id="slider-section">

    <div id="image-container">
      <img id="slider-image" class="floating" src="/images/nebir.jpg">
    </div>

    <div id="slider-text-box">
      <h2 id="slider-title">Nebir Project</h2>
      <p id="slider-desc">Supporting rural development through sustainable programs.</p>

      <button id="next-btn">Next â†’</button>
    </div>

  </section>

  <script>
    const slides = [
      {
        img: "/images/nebir.jpg",
        title: "Nebir Project",
        text: "Supporting rural development through sustainable programs."
      },
      {
        img: "/images/tota.jpg",
        title: "Tota Community Work",
        text: "Empowering local families with tools, knowledge, and training."
      },
      {
        img: "/images/project1.jpg",
        title: "Agricultural Support Initiative",
        text: "Helping farmers increase food production and income through modern techniques."
      }
    ];

    let index = 0;

    document.getElementById("next-btn").addEventListener("click", () => {
      index = (index + 1) % slides.length;
      updateSlider();
    });

    function updateSlider() {
      document.getElementById("slider-image").src = slides[index].img;
      document.getElementById("slider-title").innerText = slides[index].title;
      document.getElementById("slider-desc").innerText = slides[index].text;
    }
  </script>

  <!-- Rest of your page continues exactly the same -->

  <%- include('partials/footer') %>

</body>
</html>
