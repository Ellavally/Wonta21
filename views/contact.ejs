<%- include('partials/header') %>
<script src="/script.js"></script>

<main class="main-content">
  <section style="max-width: 1200px; margin: auto; text-align: center;">
    <h2 style="margin-bottom: 30px; font-size: 2.2em; color: #2e8b57;">Contact Us</h2>

    <!-- Contact Form -->
    <form action="/contact" method="POST" 
          style="display: flex; flex-direction: column; align-items: center; gap: 15px; margin-bottom: 50px; width: 100%; max-width: 500px;">
      <input type="text" name="name" placeholder="Your Name" required
             style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;">
      <input type="email" name="email" placeholder="Your Email" required
             style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 6px;">
      <textarea name="message" placeholder="Your Message" required
                style="width: 100%; height: 120px; padding: 10px; border: 1px solid #ccc; border-radius: 6px;"></textarea>
      <button type="submit"
              style="padding: 12px 25px; background: #007BFF; color: white; border: none; border-radius: 6px; cursor: pointer; font-weight: bold;">
        Send Message
      </button>
    </form>

    <!-- Moving Images Gallery -->
    <div class="moving-gallery" style="display: flex; justify-content: space-between; flex-wrap: wrap; gap: 20px;">
      <img id="contact-image1" src="/images/nebir.jpg" alt="Image 1" style="width: 18%; min-width: 150px; border-radius: 10px; animation: float 6s ease-in-out infinite;">
      <img id="contact-image2" src="/images/nebir2.jpg" alt="Image 2" style="width: 18%; min-width: 150px; border-radius: 10px; animation: float 6s ease-in-out infinite;">
      <img id="contact-image3" src="/images/nebir3.jpg" alt="Image 3" style="width: 18%; min-width: 150px; border-radius: 10px; animation: float 6s ease-in-out infinite;">
      <img id="contact-image4" src="/images/nebir4.jpg" alt="Image 4" style="width: 18%; min-width: 150px; border-radius: 10px; animation: float 6s ease-in-out infinite;">
      <img id="contact-image5" src="/images/nebir5.jpg" alt="Image 5" style="width: 18%; min-width: 150px; border-radius: 10px; animation: float 6s ease-in-out infinite;">
    </div>
  </section>

</main>

<%- include('partials/footer') %>
