<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>News & Updates | Wonta Rural Development Association</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body data-page="news">

  <!-- Header -->
  <%- include('partials/header') %>

  <!-- Main Content -->
  <main class="main-content">

    <section class="page-header">
      <h2>News & Updates</h2>
      <p>
        Stay updated on our latest community activities, project achievements, and development initiatives.
      </p>
    </section>

    <div class="news-grid">
      <% newsItems.forEach(item => { %>
        <div class="news-card">
          <img src="<%= item.image %>" alt="<%= item.title %>">
          <h3><%= item.title %></h3>
          <p class="news-date"><%= item.date %></p>
          <p><%= item.summary %></p>
          <a href="<%= item.link %>" class="news-btn">Read More</a>
        </div>
      <% }); %>
    </div>

    <!-- Pagination -->
    <div class="pagination">

      <!-- Previous Button -->
      <% if (currentPage > 1) { %>
        <a href="/news?page=<%= currentPage - 1 %>" class="page-btn">« Previous</a>
      <% } else { %>
        <span class="page-btn disabled">« Previous</span>
      <% } %>

      <!-- Page Numbers -->
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="/news?page=<%= i %>"
           class="page-number <%= currentPage === i ? 'active' : '' %>">
          <%= i %>
        </a>
      <% } %>

      <!-- Next Button -->
      <% if (currentPage < totalPages) { %>
        <a href="/news?page=<%= currentPage + 1 %>" class="page-btn">Next »</a>
      <% } else { %>
        <span class="page-btn disabled">Next »</span>
      <% } %>

    </div>

  </main>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- JS -->
  <script src="/script.js?v=4"></script>

</body>
</html>

