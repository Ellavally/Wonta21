<body>

  <!-- Header -->
  <%- include('partials/header') %>

  <!-- Main Content -->
  <main class="main-content" style="max-width: 1200px; margin: auto; text-align: center; padding: 50px 20px;">

    <!-- Section 1: Introduction -->
    <section style="text-align: center; margin-bottom: 50px;">
      <h2 style="margin-bottom: 30px;">Our Projects</h2>

      <p style="line-height: 1.8; font-size: 1.1em; margin-bottom: 20px;">
