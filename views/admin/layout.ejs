<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - <%= title || '' %></title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/style.css">

  <style>
    /* Keep sidebar fixed height */
    aside {
      height: calc(100vh - 56px);
      overflow-y: auto;
    }

    /* Highlight active link */
    .nav-link.active {
      font-weight: bold;
      color: #0b5e20 !important;
    }

    /* Optional: Hover effect */
    .nav-link:hover {
      background: #e8f5e9;
    }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-dark bg-success">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin">Admin Panel</a>

      <div>
        <% if (user) { %>
          <span class="text-light me-2">Hi, <%= user.username %></span>
          <a href="/admin/logout" class="btn btn-sm btn-outline-light">Logout</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- MAIN LAYOUT -->
  <div class="container-fluid">
    <div class="row">

      <!-- SIDEBAR -->
      <aside class="col-md-2 bg-light p-3 border-end">
        <ul class="nav flex-column">

          <li class="nav-item">
            <a class="nav-link <%= active === 'dashboard' ? 'active' : '' %>" href="/admin">Dashboard</a>
          </li>

          <li class="nav-item">
            <a class="nav-link <%= active === 'news' ? 'active' : '' %>" href="/admin/news">News</a>
          </li>

          <li class="nav-item">
            <a class="nav-link <%= active === 'projects' ? 'active' : '' %>" href="/admin/projects">Projects</a>
          </li>

          <li class="nav-item">
            <a class="nav-link <%= active === 'homepage' ? 'active' : '' %>" href="/admin/homepage">Homepage</a>
          </li>

          <li class="nav-item">
            <a class="nav-link <%= active === 'messages' ? 'active' : '' %>" href="/admin/messages">Messages</a>
          </li>

          <li class="nav-item">
            <a class="nav-link <%= active === 'files' ? 'active' : '' %>" href="/admin/files">Files</a>
          </li>

          <li class="nav-item">
            <a class="nav-link <%= active === 'users' ? 'active' : '' %>" href="/admin/users">Users</a>
          </li>

        </ul>
      </aside>

      <!-- PAGE CONTENT -->
      <main class="col-md-10 p-4">
        <%- body %>
      </main>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
