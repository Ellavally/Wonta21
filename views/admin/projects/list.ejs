<%- include('admin/layout') %>

<div class="container mt-4">
  <h3>Projects</h3>
  <a href="/admin/projects/new" class="btn btn-success mb-3">+ Add Project</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Category</th>
        <th>Description</th>
        <th width="160px">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(p => { %>
        <tr>
          <td><img src="<%= p.image %>" width="80"></td>
          <td><%= p.title %></td>
          <td><%= p.category %></td>
          <td><%= p.description %></td>
          <td>
            <a href="/admin/projects/edit/<%= p.id %>" class="btn btn-warning btn-sm">Edit</a>
            <form method="POST" action="/admin/projects/delete/<%= p.id %>" style="display:inline">
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
