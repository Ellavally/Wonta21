<%- include('admin/layout') %>

<div class="container mt-4" style="max-width:600px;">
  <h3><%= newsItem ? "Edit News" : "Add News" %></h3>

  <form method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label>Title</label>
      <input name="title" class="form-control" value="<%= newsItem?.title %>" required>
    </div>

    <div class="mb-3">
      <label>Date</label>
      <input name="date" class="form-control" value="<%= newsItem?.date %>" required>
    </div>

    <div class="mb-3">
      <label>Summary</label>
      <textarea name="summary" class="form-control" required><%= newsItem?.summary %></textarea>
    </div>

    <div class="mb-3">
      <label>Link</label>
      <input name="link" class="form-control" value="<%= newsItem?.link %>">
    </div>

    <div class="mb-3">
      <label>Image</label>
      <input type="file" name="image" class="form-control">
      <% if (newsItem?.image) { %>
        <img src="<%= newsItem.image %>" width="120" class="mt-2">
      <% } %>
    </div>

    <button class="btn btn-success w-100">Save</button>
  </form>
</div>
