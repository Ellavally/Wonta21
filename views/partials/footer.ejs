/* ============================
   PROFESSIONAL FOOTER STYLING
============================ */

footer {
  background: #2e8b57; /* Green brand color */
  color: #ffffff;
  margin-top: 60px;
  padding-top: 40px;
  font-family: Arial, sans-serif;
}

.footer-content {
  max-width: 1200px;
  margin: auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 40px;
  padding: 0 20px;
}

/* Sections */
.footer-about,
.footer-links,
.footer-contact {
  flex: 1;
  min-width: 260px;
}

.footer-about h3,
.footer-links h4,
.footer-contact h4 {
  margin-bottom: 16px;
  font-weight: 700;
}

.footer-about p,
.footer-contact p {
  font-size: 15px;
  line-height: 1.6;
  opacity: 0.95;
}

/* Quick Links */
.footer-links a {
  display: block;
  color: #ffffff;
  text-decoration: none;
  font-size: 15px;
  margin-bottom: 8px;
  transition: 0.3s;
}

.footer-links a:hover {
  color: #dfffe9;
  margin-left: 4px;
}

/* Contact Links */
.footer-contact a {
  color: #ffffff;
  text-decoration: none;
  font-weight: 600;
}

.footer-contact a:hover {
  color: #dfffe9;
}

/* Social Icons */
.footer-social {
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.footer-social .social-icon {
  color: #ffffff;
  text-decoration: none;
  font-size: 15px;
  padding: 6px 0;
  transition: 0.3s;
}

.footer-social .social-icon:hover {
  color: #dfffe9;
  margin-left: 4px;
}

/* Bottom Bar */
.footer-bottom {
  text-align: center;
  padding: 15px 10px;
  margin-top: 20px;
  border-top: 1px solid rgba(255,255,255,0.25);
}

.footer-bottom p {
  font-size: 14px;
  opacity: 0.9;
}

/* Mobile Friendly */
@media (max-width: 768px) {
  .footer-content {
    text-align: center;
  }

  .footer-social {
    align-items: center;
  }
}
